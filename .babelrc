{
  "presets": [
    "next/babel",
    "es2015",
    "es2017",
    "stage-0"
  ],
  "plugins": [
    ["styled-components", { "ssr": true, "displayName": true, "preprocess": false } ],
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@atoms": "./src/components/atoms",
          "@templates": "./src/components/templates",
          "@molecules": "./src/components/molecules",
          "@organisms": "./src/components/organisms",
          "@i18n": "./src/i18n"
        }
      }
    ]
  ]
}